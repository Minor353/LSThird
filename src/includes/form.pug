section.form
  .form_popup
    .form_popup-content
      .form_popup-text Сообщение отправлено
      button.form_popup-btn закрыть
  .form_wrap
    .form_title Связаться со мной
    form(action="form.php", method="post")#form
      label.form_label
        .form_label-icon
          +icon('user', '')
        .form_label-title Введите ваше имя
        input(type="text" name="name").form_input
      label.form_label
        .form_label-icon
          +icon('envelope', '')
        .form_label-title Введите ваш email
        input(type="text" name="email").form_input
      label.form_label
        .form_label-icon
          +icon('message', '')
        .form_label-title Сообщение к письму
        textarea(name="msg").form_input
      button(type="submit").form_btn отправить