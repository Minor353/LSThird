.skill {
  padding-top: 150px;
}

.skill_wrap {
  max-width: 1500px;
  padding: 0 15px;
  box-sizing: border-box;
  margin: 0 auto;
  display: flex;
  align-items: flex-end;
}

.skill_img {
  max-width: 540px;
  height: 627px;
  img {
  height: 100%;
  object-fit: cover;
  }
}

.skill_content {
  flex: 1;
}

.skill_title {
  font-size: 30px;
  font-weight: bold;
  line-height: 1.2;
  color: #414c63;
  margin-bottom: 59px;
}

.skill_description  {
  font-size: 16px;
  font-weight: 600;
  line-height: 1.88;
  color: rgba(65, 76, 99, 0.5);
  max-width: 585px;
  margin-bottom: 96px;
}

.skill_list {
  padding-left: 130px;
}

.skill_category-item-title {
  font-size: 24px;
  font-weight: bold;
  line-height: 2;
  color: #414c63;
  width: 100%;
}

.skill_item-category {
  display: flex;
  flex-wrap: wrap;
}

.skill_category-item {
  display: inline-block;
    width: 150px;
    height: 150px;
    margin-right: 35px;
    margin-bottom: 35px;
    position: relative;
}

.skill_category-item:last-child {
    margin-right: 0;
}

.skill_category-item-name {
    font-size: 18px;
  font-weight: bold;
    color: rgba(65, 76, 99, 0.5);
    position: absolute;
    transform: translate(-50%, -50%);
    top: 50%;
    left: 50%;
}