        .footer_wrap
          .footer_left-side
            .footer_logo
              img(src="#", alt="logo")
            .footer_left-data
              .footer_data-name Геннадий Никитенко
              .footer_data-text Личный сайт веб-разработчика
            .footer_right-side
              nav.nav
