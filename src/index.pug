                ul.about_data-list
                  li.about_list-item
                    .about_item-text Проживаю
                    .about_item-text Днепр
                  li.about_list-item
                    .about_item-text Возраст
                    .about_item-text 28 лет
                  li.about_list-item
                    .about_item-text Родился
